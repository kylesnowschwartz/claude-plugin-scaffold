#!/usr/bin/env bash
# Shared functions for <%= plugin_name %> hooks

# Logging helpers
log_debug() {
  if [[ "${DEBUG:-}" == "1" ]]; then
    echo "[DEBUG] $*" >&2
  fi
}

log_info() {
  echo "[INFO] $*" >&2
}

log_error() {
  echo "[ERROR] $*" >&2
}

# JSON output helpers (for hook responses)
json_continue() {
  echo '{"continue": true}'
}

json_block() {
  local message="$1"
  echo "{\"continue\": false, \"message\": \"$message\"}"
}

json_suppress() {
  echo '{"continue": true, "suppressOutput": true}'
}
